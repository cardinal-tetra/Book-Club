<% @user ||= current_user %>
    <h4><%= @user.name %></h4>
    <%= image_tag(@user.image_url, class: "img-rounded") %><br>
    <p><%= @user.thoughts %></p>
    <div class='stats'>
        <a href="<%= following_path(@user) %>">
            <strong id="following" class="stat">
                <%= @user.following.count %>
            </strong> following
        </a>
        <a href="<%= followers_path(@user) %>">
            <strong id="followers" class="stat">
                <%= @user.followers.count %>
            </strong> followers
        </a>
    </div>